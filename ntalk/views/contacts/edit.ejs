<% include ../header %>
<header class="header text-center">
    <h2>Ntalk - Editar contato</h2>
</header>
<div class="container-contacts-edit">
    <section>
        <form action="/contacts/<%- id %>?_method=PUT" method="post">
            <input type="hidden" name="_method" value="put">
            <label>Nome: </label>
            <input type="text" name="contact[name]" id="" value="<%- contact.name %>">
            <label>E-mail:</label>
            <input type="text" name="contact[email]" value="<%- contact.email %>">
            <button type="submit">Atualizar</button>
        </form>
    </section>
</div>

<% include ../exit %>
<% include ../footer %>
